<Window x:Class="MiniSampler.AudioSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniSampler"
        mc:Ignorable="d"
        Title="Select Audio Device" Height="120" Width="239" ShowInTaskbar="False" MinWidth="236" MaxHeight="120" WindowStartupLocation="CenterOwner" WindowStyle="ThreeDBorderWindow" MinHeight="120">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="comboAudioDev" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Rectangle Fill="#FFDFDFDF" Grid.Row="1"/>
        <Button x:Name="buttonOk" Content="Ok" HorizontalAlignment="Right" Margin="0,0,10,10" IsDefault="True" Width="60" Height="20" VerticalAlignment="Bottom" Grid.Row="1"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,75,10" Width="60" Height="20" VerticalAlignment="Bottom" IsCancel="True" Grid.Row="1"/>
    </Grid>
</Window>
